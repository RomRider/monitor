# TIME BASED TRIGGERS
#
# ----------------------------------------------------------------------------------------

# ----------------------------------------------------------------------------------------
# PERIODIC TRIGGER TO MAIN LOOP
# ----------------------------------------------------------------------------------------
refresh_databases() {
	while :; do
		sleep "$PREF_DATABASE_REFRESH_INTERVAL"
		echo "REFR" >main_pipe
	done
}

heartbeat_send() {
	while :; do
		sleep "15"
		echo "BEAT" >main_pipe
	done
}
# ----------------------------------------------------------------------------------------
# PERIODIC TRIGGER TO MAIN LOOP
# ----------------------------------------------------------------------------------------
periodic_trigger() {
	while :; do
		sleep "$PREF_CLOCK_INTERVAL"
		echo "TIME" >main_pipe
	done
}
